<%- include('partials/header') %> 

<div class="container">
    <h1 style="text-align: center;"><b>Add a new Comment to <%= camp.name %> </b></h1>
    <div style="width: 30%; margin: 25px auto;">
        
        <form action="/campground/<%=camp._id%>/comments" method="POST">        
           
            <div class="form-group">
                <input type="text" placeholder="Comment" name="comment[comment_text]" class="form-control">
            </div>

            <div class="form-group">
                <input type="text" placeholder="Author" name="comment[author]" class="form-control">
            </div>

            
            
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <div class="ui red button"> 
            <a href="/comments/:id/new">Add a comment</a>
        </div>
        
    </div>
   
</div>



